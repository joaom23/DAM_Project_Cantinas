<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_DAM.Views.MainPage"
            Title="Cantinas UTAD"
             x:Name="mainPage"  BackgroundColor="White" 
             NavigationPage.HasBackButton="False">
    
    <StackLayout>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="220"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="1" Text="Cantinas UTAD" TextColor="#ffa63a" FontSize="30" HorizontalOptions="Center"></Label>
            <Image Grid.Row="2" Source="{Binding Imagem}"/>

            <Button Grid.Row="4" Text="Login" FontSize="30" Padding="30" TextColor="White" BackgroundColor="#ffa63a" Command="{Binding LoginPageCommnad}"/>
            <Button Grid.Row="5" Text="Registo" FontSize="30" Padding="30" TextColor="White" BackgroundColor="#ffa63a" Command="{Binding RegistoPageCommnad}"/>
        </Grid>
    </StackLayout>
</ContentPage>